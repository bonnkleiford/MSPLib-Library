{
    "$schema": "https://json-schema.org/schema#",
    "$id": "https://github.com/bonnkleiford/MSPLib-Library/problem.schema.json",
    "title": "The schema for MSPFormat representation of an MSP problem.",
    "type": "object",
    "required": ["version", "name", "maximize", "variables", "constraints"],
    "properties": {
        "version": {
            "description": "Version of MSPFormat model.",
            "type": "string"
        },
        "name": {
            "description": "The name of the problem model.",
            "type": "string"
        },
        "maximize": {
            "description": "The objective function sense.",
            "type": "boolean"
        },
        "variables": {
            "description": "An array containing the variables of the problem.",
            "type": "array",
            "items":  {
                "type": "object",
                  "required": ["name", "stage", "obj", "lb", "ub", "type"],
                 "properties": {
                    "name": {
                        "description": "Name of the variable.",
                        "type": "string"
                    },
                    "stage": {
                        "description": "The 0-indexed stage where the variable occurs.",
                        "type": "integer",
                        "minimum": 0
                    },
                    "obj": {
                        "description": "Objective value coefficient of the variable.",
                        "$ref": "#/definitions/AffineFunction"
                    },
                    "lb": {
                        "description": "Lower bound value of the variable.",
                        "$ref": "#/definitions/AffineFunction"
                    },
                     "ub": {
                        "description": "Upper bound value of the variable.",
                        "$ref": "#/definitions/AffineFunction"
                    },
                    "type": {
                        "description": "Type of the variable.",
                        "enum": [
                            "CONTINUOUS",
                            "BINARY",
                            "INTEGER"
                        ]
                    }
                 }
            }
        },
        "constraints": {
            "description": "An array containing the constraints of the problem.",	
            "type": "array",
            "items":  {
                "type": "object",
                  "required": ["type", "lhs", "rhs"],
                 "properties": {
                    "name": {
                        "description": "Name of the constrainn.",
                        "type": "string"
                    },
                    "type": {
                        "description": "Type of the inequality.",
                        "enum": [
                            "EQ",
                            "LEQ",
                            "GEQ"
                        ]
                    },
                    "lhs": {
                        "description": "An array containing the terms in the left-hand side of the constraints of the problem.",
                        "type": "array",
                        "items":  {
                            "type": "object",
                              "required": ["name", "stage", "coefficient"],
                              "properties": {
                                "name": {
                                    "description": "Name of the variable.",
                                    "type": "string"
                                },
                                "stage": {
                                    "description": "Problem stage which the variable occurs.",
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "coefficient": {
                                    "description": "Constraint coefficient of the variable.",
                                    "$ref": "#/definitions/AffineFunction"
                                }
                            }
                        }
                    },
                    "rhs": {
                        "description": "An array containing the terms in the right-hand side of the constraints of the problem.",
                        "$ref": "#/definitions/AffineFunction"
                    }
                }
            }
        }
    },
    "definitions": {
        "AffineFunction": {
            "type": "array",
            "items": {
                "oneOf": [{
                    "description": "The function is a constant",
                    "type": "number"
                }, {
                    "description": "The function is a random variable, or `inf` or `-inf`",
                    "type": "string"
                }, {
                    "description": "The function is some function of the random variables",
                    "type": "object",
                    "properies": {
                        "ADD": {
                            "oneOf": [{
                                "type": "string"
                            }, {
                                "type": "number"
                            }]
                        },
                        "MUL": {
                            "oneOf": [{
                                "type": "string"
                            }, {
                                "type": "number"
                            }]
                        }
                    }
                }]
            }
        }
    }
}
